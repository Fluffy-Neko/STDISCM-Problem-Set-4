@{  
    ViewData["Title"] = "Node Error";  
    var affectedPage = ViewBag.AffectedPage ?? "this page";  
    var node = ViewBag.Node ?? "an unknown node";  
}  

<div class="container text-center mt-5">  
    <h1 class="display-4 text-danger">Oops!</h1>  
    <p class="lead">@affectedPage isn't working because <strong>@node</strong> is down.</p>  

    <p>We apologize for the inconvenience. Please try again later or return to the home page.</p>  

    <!-- Button to redirect the user to the home page -->  
    <a href="/" class="btn btn-primary btn-lg mt-3">Go to Home</a>  
</div>